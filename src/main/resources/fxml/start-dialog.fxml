<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tcpviewer.ui.controller.StartDialogController"
      spacing="15"
      prefWidth="400"
      prefHeight="250">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Start TCP Proxy" styleClass="dialog-title"/>

    <Separator/>

    <!-- Form Grid -->
    <GridPane hgap="10" vgap="10">
        <!-- Local IP -->
        <Label text="Local IP:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="localIpField" text="127.0.0.1" promptText="e.g., 127.0.0.1"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Local Port -->
        <Label text="Local Port:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="localPortField" promptText="e.g., 8080"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Target Host -->
        <Label text="Target Host:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="targetHostField" promptText="e.g., google.com or 192.168.1.1"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- Target Port -->
        <Label text="Target Port:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="targetPortField" promptText="e.g., 80"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
    </GridPane>

    <!-- Validation Message -->
    <Label fx:id="validationLabel" textFill="red" wrapText="true" visible="false"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="OK" onAction="#onOkClicked" defaultButton="true" prefWidth="80"/>
        <Button text="Cancel" onAction="#onCancelClicked" cancelButton="true" prefWidth="80"/>
    </HBox>
</VBox>
